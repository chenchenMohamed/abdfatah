{% block body %}
<div class="main">
  <div class="main-inner">
    <div class="container">
      <div class="row">
        <div class="span12">
          <div class="content-wrapper">
            <section class="content-header">
              <h1><center>Ajouter une paiement d'écheance</center> </h1>
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('accueil') }}"><i class="fa fa-dashboard"></i> Home</a></li>
                <li  class="breadcrumb-item active">paiement echeance</li>
              </ol>
            </section>
            <section class="content" style="padding-left:25px;padding-right:25px;">
              <div class="row">
                <div class="col-md-12">
                  <div class="box box-info">
                    <div class="box-header with-border">
                       <h3 class="box-title"><center>Ajouter une paiement d'écheance</center></h3>
                    </div> 
<hr><br>
	<div class="row">
	   <div class="span4">&nbsp;
	   </div>
	   <div class="span4">
    {{ form_start(form) }}
	<div class="row">
	   <div class="span4">
        <div class="row">
           <div class="col-sm-4">{{ form_label(form.date) }}</div>
           {{ form_errors(form.date) }}
           <div class="col-sm-8">{{ form_widget(form.date,{'attr': {'readonly':true}}) }}</div>
        </div>
        <div class="row">
           <div class="col-sm-4">{{ form_label(form.montant) }}</div>
           {{ form_errors(form.montant) }}
           <div class="col-sm-8">{{ form_widget(form.montant,{'attr': {'readonly':true}}) }}</div>
        </div>
        <div class="row" style="display:none;">
           <div class="col-sm-4">{{ form_label(form.refEcheance) }}</div>
           {{ form_errors(form.refEcheance) }}
           <div class="col-sm-8">{{ form_widget(form.refEcheance) }}</div>
        </div>
	   </div>
	</div>
		<div class="row">
		   <div class="span4" align="right">
              <input type="submit" class="btn btn-success" value="ajouter" />
		   </div>
		</div>
    {{ form_end(form) }}

	   </div>
	   </div>
	   </div>
	   </div>
	   </div>
	   </section>
	   
	   </div>
	   </div>
	   </div>
	   </div>
	   </div>
	   </div>
{% endblock %}
