{% block body %}
<div class="main">
  <div class="main-inner">
    <div class="container">
      <div class="row">
        <div class="span12">
  <div class="content-wrapper">
    <section class="content-header">
      <h1>
        Agence
      </h1>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{path('accueil')}}"><i class="fa fa-dashboard"></i> Accueil</a></li>
        <li  class="breadcrumb-item active">Agence</li>
      </ol>
    </section>

    <!-- Main content -->
     <section class="content" style="padding-left:50px;padding-right:50px;">
      <div class="row">
        <div class="col-md-12">
              <!-- TABLE: LATEST ORDERS -->
              <div class="box box-info">
                <div class="box-header with-border">
                  <h3 class="box-title">Liste d'Agence</h3>
                </div>
      <div align="right" class="form-group">
          <div class="input-group">
            <h4 class="text-center"><a href="{{ path('agence_new') }}" role="button" class="btn btn-info btn-sm">Ajouter une Agence</a></h4>
          </div>
      </div><br><br>
                <div class="box-body">
                  <div class="table-responsive">
                    <table class="table table-striped" style="background-color:#f1f1f1;padding-top:25px;padding-bottom:25px;padding-left:25px;padding-right:25px; border:1px;border-style: solid;border-color: #B8B8B8;">
                    <thead>
                     <tr>
                      <th class="text-center">Codeagence</th>
                      <th class="text-center">Nom Agence</th>
                      <th class="text-center">tel</th>
                      <th class="text-center">fax</th>
                      <th class="text-center">Adresse</th>
                      <th class="text-center">Ville</th>
                      <th class="text-center">Nature</th>
                      <th></th>
                     </tr>
                    </thead>
                    <tbody>
                      {% for agence in agences %}
                      <tr>  
                        <td>{{ agence.codeAgence }}</td>
                       <td>{{ agence.nom }}</td>
                        <td>{{ agence.tel }}</td>
                        <td>{{ agence.fax }}</td>
                        <td>{{ agence.adresse }}</td>
                        <td>{{ agence.ville }}</td>
                        <td>{{ agence.nature }}</td>
                        <td>
                            <h4 class="text-center"><a href="{{ path('agence_edit', { 'id': agence.id }) }}" role="button" class="btn btn-success btn-sm">Edit</a></h4>
                        </td>
                        
                      </tr>
                      {% endfor %}
                    </tbody>
                    </table>
                  </div>
                </div>
              </div>
      </div>

    </div>
  </section>
</div>

</div>
</div>
</div>
</div>
</div>
{% endblock %}