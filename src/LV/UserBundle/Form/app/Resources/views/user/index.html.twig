{% block body %}

<div class="main">
  <div class="main-inner">
    <div class="container">
      <div class="row">
        <div class="span12">

        
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1><center>Liste des utilisateurs</center></h1>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('accueil') }}"><i class="fa fa-dashboard"></i> Tableau de Bord</a></li>
        <li  class="breadcrumb-item active">/ Utilisateur</li>
      </ol>
    </section>

    <!-- Main content -->
     <section class="content" style="padding-left:50px;padding-right:50px;">
      <div class="row">
        <div class="col-md-12">
              <!-- TABLE: LATEST ORDERS -->
              <div class="box box-info">
                <div class="box-header with-border">
                  <h3 class="box-title"><center>Liste des utilisateurs</center></h3>
                </div>
                <br>
                {% if is_granted('ROLE_ADMIN') %}
                 <h4 class="text-center"><a href="{{ path('fos_user_registration_register') }}" role="button" class="btn btn-info btn-sm">Nouveau utlisateur</a></h4>
                 {% endif %}
      </div> 
  <br>
                <div class="box-body">
                  <div class="table-responsive">

    <table id="example" class="table table-striped" style="background-color:#f1f1f1;padding-top:25px;padding-bottom:25px;padding-left:25px;padding-right:25px; border:1px;border-style: solid;border-color: #B8B8B8;">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Roles</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>{% for role in user.roles %}
                            {% if role == 'ROLE_ADMIN' %}
                            Administrateur |
                            {% else %}
                            Utilisateur
                            {% endif %}
                        {% endfor %}</td>
                    <td>
                      {% if is_granted('ROLE_ADMIN') %}
                      <h4 class="text-center"><a href="{{ path('user_edit', { 'id': user.id }) }}" role="button" class="btn btn-success btn-sm">Modifier</a></h4>
                      {% elseif app.user.username == user.username %}
                       <h4 class="text-center"><a href="{{ path('user_edit', { 'id': user.id }) }}" role="button" class="btn btn-success btn-sm">Modifier</a></h4>
                      {% endif %}
                    </td>
                    <td>
                      {% if is_granted('ROLE_ADMIN') %}
                      {% if app.user.username == user.username %}
                      {% else %}
                      <h4 class="text-center"><a href="{{ path('user_show', { 'id': user.id }) }}" role="button" class="btn btn-danger btn-sm">Supprimer</a></h4>
                      {% endif %}
                      {% endif %}
                    </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
                  </div>
                </div>
              </div>
      </div>

    </div>
  </section>
</div>

</div>
</div>
</div>
</div>
</div>
{% endblock %}