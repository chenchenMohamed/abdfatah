{% extends 'base.html.twig' %}
{% block menu %}
<div class="subnavbar">
  <div class="subnavbar-inner">
    <div class="container">
      <ul class="mainnav">
        <li><a href="{{path('accueil')}}"><i class="icon-dashboard"></i><span>Tableau de Bord</span> </a> </li>
        <li><a href="{{path('voiture_index')}}"><i class="fa fa-automobile"></i><span>Vehicule</span> </a> </li>
        <li><a href="{{path('client_index')}}"><i class="shortcut-icon icon-user"></i><span>Client</span> </a></li>
        <li><a href="{{path('reservation_index')}}"><i class="shortcut-icon icon-save"></i><span>Reservation</span> </a> </li>
        <li><a href="{{path('csr_index')}}"><i class="shortcut-icon icon-edit"></i><span>Contrat</span> </a> </li>
        <li><a href="{{path('paiement_index')}}"><i class="shortcut-icon icon-random"></i><span>Paiement</span> </a> </li>
        <li class="active"><a href="{{path('facture_index')}}"><i class="shortcut-icon icon-list-alt"></i><span>Facture</span> </a> </li>
      </ul>
    </div>
  </div>
</div>
{% endblock %}
{% block body %}

<div class="main">
  <div class="main-inner">
    <div class="container">
      <div class="row">
        <div class="span12">

        
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1><center>Liste de Facture</center></h1>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('accueil') }}"><i class="fa fa-dashboard"></i> Tableau de Bord</a></li>
        <li  class="breadcrumb-item active">/ Facture</li>
      </ol>
    </section>

    <!-- Main content -->
     <section class="content" style="padding-left:50px;padding-right:50px;">
      <div class="row">
        <div class="col-md-12">
              <!-- TABLE: LATEST ORDERS -->
              <div class="box box-info">
                <div class="box-header with-border">
                  <h3 class="box-title"><center>Liste de Facture</center></h3>
                </div>
      
  <br>
                <div class="box-body">
                  <div class="table-responsive">

    <table id="example" class="table table-striped" style="background-color:#f1f1f1;padding-top:25px;padding-bottom:25px;padding-left:25px;padding-right:25px; border:1px;border-style: solid;border-color: #B8B8B8;">
        <thead>
            <tr>
                <th class="text-center">Numéro Facture</th>
                <th class="text-center">Date Facture</th>
                <th class="text-center">Numéro Contrat</th>
                <th class="text-center">Conducteur1</th>
                <th class="text-center">Conducteur2</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for facture in factures %}
            <tr>
                <td style="padding-top:30px;">{{ facture.numFacture }}</td>
                <td style="padding-top:30px;">{% if facture.dateFacture %}{{ facture.dateFacture|date('Y-m-d') }}{% endif %}</td>
                <td style="padding-top:30px;">
				{% if (facture.refPayement.refContrat != null) %}{{ facture.refPayement.refContrat.numContrat }}
				{% elseif (facture.refPayement.refCsr != null) %}{{ facture.refPayement.refCsr.numContrat }}
				{% endif %}</td>
                <td style="padding-top:30px;">
				{% if (facture.refPayement.refContrat != null) %}{{ facture.refPayement.refContrat.conducteur1 }}
				{% elseif (facture.refPayement.refCsr != null) %}{{ facture.refPayement.refCsr.conducteur1 }}
				{% endif %}</td>
                <td style="padding-top:30px;">
				{% if (facture.refPayement.refContrat != null) %}{{ facture.refPayement.refContrat.conducteur2 }}
				{% elseif (facture.refPayement.refCsr != null) %}{{ facture.refPayement.refCsr.conducteur2 }}
				{% endif %}</td>
                <td style="padding-top:30px;">
                  {% if facture.refPayement.refContrat in contrats%}
                    <h4 class="text-center"><a href="{{ path('facture_show', { 'id': facture.id }) }}" role="button" class="btn btn-warning btn-sm">Détails</a></h4>
                  {% elseif facture.refPayement.refCsr in csrs%}
                    <h4 class="text-center"><a href="{{ path('facture_show2', { 'id': facture.id }) }}" role="button" class="btn btn-warning btn-sm">Détails</a></h4>
                  {% endif %}
                </td>
                <td style="padding-top:30px;">
                  {% if facture.refPayement.refContrat in contrats%}
                    <h4 class="text-center"><a href="{{ path('facture_pdf', { 'id': facture.id }) }}" role="button" class="btn btn-dafault btn-sm">Imprimer</a></h4>
                    {% elseif facture.refPayement.refCsr in csrs%}
                    <h4 class="text-center"><a href="{{ path('facture_pdf2', { 'id': facture.id }) }}" role="button" class="btn btn-dafault btn-sm">Imprimer</a></h4>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
                  </div>
                </div>
              </div>
      </div>

    </div>
  </section>
</div>

</div>
</div>
</div>
</div>
</div>
{% endblock %}