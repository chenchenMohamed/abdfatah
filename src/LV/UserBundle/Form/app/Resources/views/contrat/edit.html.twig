<script>
 function calcultarif() {

    var a = parseFloat($('#lv_locationbundle_contrat_tarif').val());
    var b = parseInt($('#lv_locationbundle_contrat_nbreJour').val());
    var result = $("#lv_locationbundle_contrat_recette");
    var d = a*b;
    result.val(d);
        };

    </script>
    
{% endblock %}