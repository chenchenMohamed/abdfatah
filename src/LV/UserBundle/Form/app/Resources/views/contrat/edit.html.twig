    </section>
           <div align="right" class="form-group" style="margin-right:110px;">
                <div class="input-group">
                  <h4 class="text-center"><a href="{{ path('csr_index') }}" role="button" class="btn btn-info btn-sm">Retour Ã   la Liste</a></h4>
                </div>
            </div>
<div class="box-body"> 
    {{ form_start(edit_form) }}
    <div class="row">
      <div class="span3">
        <div class="row">
           <div class="col-sm-4">{{ form_label(edit_form.numContrat) }}</div>
           {{ form_errors(edit_form.numContrat) }}
           <div class="col-sm-8">{{ form_widget(edit_form.numContrat, {'attr': {'readonly': 'readonly'}}) }}</div>
        </div>
        <div class="row">
           <div class="col-sm-4">{{ form_label(edit_form.dateContrat) }}</div>
           {{ form_errors(edit_form.dateContrat) }}
           <div class="col-sm-8">{{ form_widget(edit_form.dateContrat, {'attr': {'readonly': 'readonly'}}) }}</div>
        </div>
        <div class="row">
           <div class="col-sm-4">{{ form_label(edit_form.kmDepart) }}</div>
           {{ form_errors(edit_form.kmDepart) }}
           <div class="col-sm-8">{{ form_widget(edit_form.kmDepart) }}</div>
        </div>
      </div>
      <div class="span3">
        <div class="row">
           <div class="col-sm-4">{{ form_label(edit_form.tarif) }}</div>
           {{ form_errors(edit_form.tarif) }}
           <div class="col-sm-8">{{ form_widget(edit_form.tarif, { 'attr': {'onkeyup': 'calcultarif()'}}) }}</div>
        </div>
        <div class="row">
           <div class="col-sm-4">{{ form_label(edit_form.nbreJour) }}</div>
           {{ form_errors(edit_form.nbreJour) }}
           <div class="col-sm-8">{{ form_widget(edit_form.nbreJour, {'attr': {'readonly': 'readonly'}}) }}</div>
        </div>
        <div class="row">
           <div class="col-sm-4">{{ form_label(edit_form.recette) }}</div>
           {{ form_errors(edit_form.recette) }}
           <div class="col-sm-8">{{ form_widget(edit_form.recette, {'attr': {'readonly': 'readonly'}}) }}</div>
        </div>
      </div>
      <div class="span3">
        <div class="row">
           <div class="col-sm-4">{{ form_label(edit_form.conducteur1) }}</div>
           {{ form_errors(edit_form.conducteur1) }}
           <div class="col-sm-8">{{ form_widget(edit_form.conducteur1,{'attr': {'class':'chosen-select'}}) }}</div>
        </div><br>
        <div class="row">
           <div class="col-sm-4">{{ form_label(edit_form.conducteur2) }}</div>
           {{ form_errors(edit_form.conducteur2) }}
           <div class="col-sm-8">{{ form_widget(edit_form.conducteur2,{'attr': {'class':'chosen-select'}}) }}</div>
        </div>
        <div class="row" style="display:none;">
           <div class="col-sm-4">{{ form_label(edit_form.refReservation) }}</div>
           {{ form_errors(edit_form.refReservation) }}
           <div class="col-sm-8">{{ form_widget(edit_form.refReservation,{'attr': {'class':'chosen-select'}}) }}</div>
        </div>
      </div>
      <div class="span3">
        <div class="row">
           <div class="col-sm-4">{{ form_label(edit_form.niveauCarburant) }}</div>
           {{ form_errors(edit_form.niveauCarburant) }}
           <div class="col-sm-8">{{ form_widget(edit_form.niveauCarburant) }}</div>
        </div>
        <div class="row">
           <div class="col-sm-4">{{ form_label(edit_form.etat) }}</div>
           {{ form_errors(edit_form.etat) }}
           <div class="col-sm-8">{{ form_widget(edit_form.etat) }}</div>
        </div>
      </div>
      </div>
        <div class="row">
        <div class="span12" align="right">
            <input type="submit" class="btn btn-success" value="Modifier" />
        </div>
