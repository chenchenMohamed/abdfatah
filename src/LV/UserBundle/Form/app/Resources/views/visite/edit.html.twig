{% block body %}
<div class="main">
  <div class="main-inner">
    <div class="container">
      <div class="row">
        <div class="span12">
<h1>Modifier une Visite</h1>  
<div class="content-wrapper">
    <section class="content-header">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('accueil') }}"><i class="fa fa-dashboard"></i> Accueil</a></li>
        <li  class="breadcrumb-item"><a href="{{ path('visite_index') }}"><i class="fa fa-car"></i>Visite</a></li>
        <li  class="breadcrumb-item active">Modifier une Visite</li>
      </ol>
    </section>
           <div align="right" class="form-group" style="margin-right:110px;">
                <div class="input-group">
                  <h4 class="text-center"><a href="{{ path('visite_index') }}" role="button" class="btn btn-info btn-sm">Retour Ã   la Liste</a></h4>
                </div>
            </div>
   
<div class="row">
   <div class="col-sm-4">
   </div>
   <div class="col-sm-5 text-left" style="padding:25px;">
    {{ form_start(edit_form) }}
      <div class="span4">
        <div class="row" style="padding-bottom:25px;">
           <div class="col-sm-4">{{ form_label(edit_form.numVisite) }}</div>
           {{ form_errors(edit_form.numVisite) }}
           <div class="col-sm-8">{{ form_widget(edit_form.numVisite,{attr:{'readonly':true}}) }}</div>
        </div>
        <div class="row" style="padding-bottom:25px;">
           <div class="col-sm-4">{{ form_label(edit_form.dateVisite) }}</div>
           {{ form_errors(edit_form.dateVisite) }}
           <div class="col-sm-8">{{ form_widget(edit_form.dateVisite) }}</div>
        </div>
      </div>
      <div class="span4">
        <div class="row" style="padding-bottom:25px;">
           <div class="col-sm-4">{{ form_label(edit_form.dateProchVisite) }}</div>
           {{ form_errors(edit_form.dateProchVisite) }}
           <div class="col-sm-8">{{ form_widget(edit_form.dateProchVisite) }}</div>
        </div>
        <div class="row" style="padding-bottom:25px;">
           <div class="col-sm-4">{{ form_label(edit_form.montant) }}</div>
           {{ form_errors(edit_form.montant) }}
           <div class="col-sm-8">{{ form_widget(edit_form.montant) }}</div>
        </div>
      </div>
      <div class="span3">
        <div class="row" style="padding-bottom:25px;">
           <div class="col-sm-4">{{ form_label(edit_form.refVoiture) }}</div>
           {{ form_errors(edit_form.refVoiture) }}
           <div class="col-sm-8">{{ form_widget(edit_form.refVoiture,{'attr': {'class':'chosen-select'}}) }}</div>
        </div>
      </div>
        <div class="row text-right">
            <input type="submit" class="btn btn-success" value="Modifier" />
        </div>
    {{ form_end(edit_form) }}
    </div>
</div>
</div>
</div>
</div>
</div>
</div>
{% endblock %}