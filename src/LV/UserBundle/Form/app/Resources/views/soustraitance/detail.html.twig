                {% else %}
                <td><input type="button" class="btn btn-default form-control" value="Non Payée" readonly></td>
                {% endif %}
                 {% else %}
                
                {% for paiementSoustraitance in paiementSoustraitances  if ( date1 == paiementSoustraitance.date and paiementSoustraitance.date is defined ) %}
                <td><input type="button" class="btn btn-default form-control" value="&nbsp;&nbsp;&nbsp;&nbsp;Payée &nbsp;&nbsp;&nbsp;" readonly></td>
                {% else %}
                {% if ( date1 == dt|date_modify("+1 month") ) %}
                <td><a href="{{ path('paiementsoustraitance_new', { 'id': soustraitance.id,'date' : date1|date('Y-m-d')}) }}"><button class="btn btn-success form-control"> &nbsp;Paiement&nbsp;</button></a></td>
