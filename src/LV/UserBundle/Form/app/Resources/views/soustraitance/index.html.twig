{% block body %}<div class="main">
  <div class="main-inner">
    <div class="container">
      <div class="row">
        <div class="span12">

        
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1><center>Liste des soutraitances</center></h1>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('accueil') }}"><i class="fa fa-dashboard"></i> Tableau de Bord</a></li>
        <li  class="breadcrumb-item active"> / Soustraitance</li>
      </ol>
    </section>

    <!-- Main content -->
     <section class="content" style="padding-left:50px;padding-right:50px;">
      <div class="row">
        <div class="col-md-12">
              <!-- TABLE: LATEST ORDERS -->
              <div class="box box-info">
                <div class="box-header with-border">
                  <h3 class="box-title"><center>Liste des soustraitances</center></h3>
                </div>
      <div class="span8">&nbsp;
  </div>
  <div class="span3">
      <div align="right" class="form-group">
          <div class="input-group">
            <h4 class="text-center"><a href="{{ path('soustraitance_search') }}" role="button" class="btn btn-info btn-sm">Ajouter une soustraitance</a></h4>
          </div>
      </div>
  </div><br><br>
                <div class="box-body">
    <table id="example" class="table table-striped" style="background-color:#f1f1f1;padding-top:25px;padding-bottom:25px;padding-left:25px;padding-right:25px; border:1px;border-style: solid;border-color: #B8B8B8;">
        <thead>
            <tr>
                <th class="text-center">Numéro soustraitance</th>
                <th class="text-center">Matricule</th>
                <th class="text-center">Montant total</th>
                <th class="text-center">Monatnt mensuel</th>
                <th class="text-center">Montnat restant</th>
                <th class="text-center">Date premierpay</th>
                <th class="text-center">Etat</th>
                <th class="text-center">Refagence</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for soustraitance in soustraitances %}
       
            <tr>
                <td>{{ soustraitance.numSoustraitance }}</td>
                <td>{{ soustraitance.refVoiture.matricule }}</td>
                <td>{{ soustraitance.montantTotal }}</td>
                <td>{{ soustraitance.montantMensuel }}</td>
                <td>{{ soustraitance.montantRestant }}</td>
                <td>{% if soustraitance.datePremierPay %}{{ soustraitance.datePremierPay|date('Y-m-d') }}{% endif %}</td>
                <td>{{ soustraitance.etat }}</td>
                <td>{{ soustraitance.refAgence.codeAgence }}</td>
                <td>
                            <h4 class="text-center"><a href="{{ path('soustraitance_detail', { 'id': soustraitance.id }) }}" role="button" class="btn btn-info btn-sm">Détails</a></h4>
                </td>
                {% if soustraitance.montantPaye == 0%}
                <td>
                            <h4 class="text-center"><a href="{{ path('soustraitance_edit', { 'id': soustraitance.id }) }}" role="button" class="btn btn-success btn-sm">Modifier</a></h4>
                </td>
                {% endif %}
            </tr>
            
        {% endfor %}
        </tbody>
    </table>
  </div>
  </div>
  </div>
  </div>
  </section>
  </div>
  </div>
  </div>
  </div>
  </div>
  </div>

{% endblock %}
