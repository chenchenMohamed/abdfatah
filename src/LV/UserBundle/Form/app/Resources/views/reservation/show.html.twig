{% block body %}
<div class="main">
  <div class="main-inner">
    <div class="container">
      <div class="row">
        <div class="span12">
        <h1>Reservation</h1>
           <div align="right" class="form-group" style="margin-right:110px;">
                <div class="input-group">
                  <h4 class="text-center"><a href="{{ path('reservation_index') }}" role="button" class="btn btn-info btn-sm" data-toggle="modal">Retour à  la Liste</a></h4>
                </div>
            </div>
<br><br><hr/>
<div class="span3"><legend><u>Reservation</u></legend>
</div>
<div class="span3"><legend><u>Information de Client</u></legend>
</div>
<div class="span5"><legend><center><u>Information de Voiture</u></center></legend>
</div>
<br>

<div class="row">
<div class="span3">
            
          <div class="form-group">
                <label for="dtp_input2" class="col-md-4 control-label">Date Reservation</label>
                <div class="input-group text">
                    <input class="form-control" size="16" name="datedebut" type="text" value="{% if reservation.dateResevation %}{{ reservation.dateResevation|date('Y-m-d') }}{% endif %}" readonly>
                </div>
            </div>
          <div class="form-group">
                <label for="dtp_input2" class="col-sm-4 control-label">Date Debut</label>
                <div class="input-group date form_date col-sm-8" data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input2"  id="startDatePicker" data-link-format="yyyy-mm-dd">
                    <input class="form-control" size="16" name="datedebut" type="text" value="{% if reservation.dateDebut %}{{ reservation.dateDebut|date('Y-m-d') }}{% endif %}" readonly>
                    <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
          <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                </div>
            </div>
      <div class="form-group">
                <label for="dtp_input3" class="col-sm-4 control-label">Time debut</label>
                <div class="input-group date form_time col-sm-8" data-date="" data-date-format="hh:ii" data-link-field="dtp_input3" data-link-format="hh:ii">
                    <input class="form-control" size="16" type="text" value="" readonly>
                    <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
          <span class="input-group-addon"><span class="glyphicon glyphicon-time"></span></span>
                </div>
            </div>
      <div class="form-group">
                <label for="dtp_input2" class="col-sm-4 control-label">Date Fin</label>
                <div class="input-group date form_date col-sm-8" data-date="" id="endDatePicker" data-date-format="dd MM yyyy" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
                    <input class="form-control" size="16" name="datefin" type="text" value="{% if reservation.dateFin %}{{ reservation.dateFin|date('Y-m-d') }}{% endif %}" readonly>
                    <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
          <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                </div>
            </div>
      <div class="form-group">
                <label for="dtp_input3" class="col-sm-4 control-label">Time Fin</label>
                <div class="input-group date form_time col-sm-8" data-date-format="hh:ii" data-link-field="dtp_input3" data-link-format="hh:ii">
                    <input class="form-control" size="16" type="text" value="" readonly>
                    <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                    <span class="input-group-addon"><span class="glyphicon glyphicon-time"></span></span>
                </div>
      </div>
</div>
<div class="span3">
      <div class="form-group">
          <label for="dtp_input2" class="col-md-4 control-label">CIN</label>
          <div class="input-group text">
              <input class="form-control" size="16" name="cin" type="text" value="{{ reservation.refclient.cin }}" readonly>
          </div>
      </div>
      <div class="form-group">
          <label for="dtp_input2" class="col-md-4 control-label">Nom</label>
          <div class="input-group text">
              <input class="form-control" size="16" name="nom" type="text" value="{{ reservation.refclient.nom }}" readonly>
          </div>
      </div>
      <div class="form-group">
          <label for="dtp_input2" class="col-md-4 control-label">Prenom</label>
          <div class="input-group text">
              <input class="form-control" size="16" name="prenom" type="text" value="{{ reservation.refclient.prenom }}" readonly>
          </div>
      </div>
      <div class="form-group">
          <label for="dtp_input2" class="col-md-4 control-label">Numero Permis</label>
          <div class="input-group text">
              <input class="form-control" size="16" name="numpermis" type="text" value="{{ reservation.refclient.numPermis }}" readonly>
          </div>
      </div>
      <div class="form-group">
          <label for="dtp_input2" class="col-md-4 control-label">Nationalité</label>
          <div class="input-group text">
              <input class="form-control" size="16" name="nationalite" type="text" value="{{ reservation.refclient.nationalite }}" readonly>
          </div>
      </div>
</div>
<div class="span3">
      <div class="form-group">
          <label for="dtp_input2" class="col-md-4 control-label">Immatriculation</label>
          <div class="input-group text">
              <input class="form-control" size="16" name="matricule" type="text" value="{{ reservation.refvoiture.matricule }}" readonly>
          </div>
      </div>
      
      <div class="form-group">
          <label for="dtp_input2" class="col-md-4 control-label">Modele</label>
          <div class="input-group text">
              <input class="form-control" size="16" name="modele" type="text" value="{{ reservation.refvoiture.modele }}" readonly>
          </div>
      </div>
      <div class="form-group">
          <label for="dtp_input2" class="col-md-4 control-label">Marque</label>
          <div class="input-group text">
              <input class="form-control" size="16" name="marque" type="text" value="{{ reservation.refvoiture.marque }}" readonly>
          </div>
      </div>
      <div class="form-group">
          <label for="dtp_input2" class="col-md-4 control-label">Couleur</label>
          <div class="input-group text">
              <input class="form-control" size="16" name="couleur" type="text" value="{{ reservation.refvoiture.couleur }}" readonly>
          </div>
      </div>
      <div class="form-group">
          <label for="dtp_input2" class="col-md-4 control-label">Prix</label>
          <div class="input-group text">
              <input class="form-control" size="16" name="prix" type="text" value="{{ reservation.nbreJour*5 }} TND" readonly>
          </div>
      </div>
</div>
<div class="span3">
	  {{ form_start(delete_form) }}
                <input type="submit" class="btn btn-danger" value="Delete">
            {{ form_end(delete_form) }}
</div>

</div>
</div>
</div>
</div>
</div>
</div>
</div>


{% endblock %}