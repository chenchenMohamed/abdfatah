{% block body %}
<div class="main">
  <div class="main-inner">
    <div class="container">
      <div class="row">
        <div class="span12">
<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Assurance
      </h1>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('accueil') }}"><i class="fa fa-dashboard"></i> Home</a></li>
        <li  class="breadcrumb-item active">Assurance</li>
      </ol>
    </section>

    <!-- Main content -->
     <section class="content" style="padding-left:25px;padding-right:25px;">
      <div class="row">
        <div class="col-md-12">
              <!-- TABLE: LATEST ORDERS -->
              <div class="box box-info">
                <div class="box-header with-border">
                  <h3 class="box-title">Liste de Assurance</h3>
                </div>
      <div align="right" class="form-group">
          <div class="input-group">
            <h4 class="text-center"><a href="{{ path('assurance_new') }}" role="button" class="btn btn-info btn-sm">Ajouter une Assurance</a></h4>
          </div>
      </div>
                <div class="box-body">
                  <div class="table-responsive">
                    <table class="table table-striped" style="background-color:#f1f1f1;padding-top:25px;padding-bottom:25px;padding-left:25px;padding-right:25px; border:1px;border-style: solid;border-color: #B8B8B8;">
                    <thead>
                     <tr>
                      <th class="text-center">Num√©ro d'assurance</th>
                      <th class="text-center">Nom d'assurance</th>
                      <th class="text-center">Date d'assurance</th>
                      <th class="text-center">Date prochaine assurance</th>
                      <th class="text-center">Montant</th>
                      <th class="text-center"></th>
                      <th></th>
                     </tr>
                    </thead>
                    <tbody>
                      {% for assurance in assurances %}
                      <tr>
                        <td>{{ assurance.numAssurance }}</td>
                        <td>{{ assurance.nomAssurance }}</td>
                        <td>{% if assurance.dateAssurance %}{{ assurance.dateAssurance|date('Y-m-d') }}{% endif %}</td>
                        <td>{% if assurance.dateProchAssurance %}{{ assurance.dateProchAssurance|date('Y-m-d') }}{% endif %}</td>
                        <td>{{ assurance.montant }}</td>
                        <td>
                              <p style="color:red"><b>Voitures en location :</b></p>
                            {% for ref in assurance.refvoiture if ref.etat == 'Location' or ref.etat == '' %}
                              <table class="table table-striped">
                                <tr><td> {{ ref.matricule }}</td>
                                  <td>{{ ref.marque }}  {{ ref.modele }}</td>
                                </tr>
                              </table>

                            {% endfor %}
                              <p style="color:red"><b>Voitures en soustraitance :</b></p>
                            {% for ref in assurance.refvoiture if ref.etat == 'Soustraitance' %}
                              <table class="table table-striped">
                                <tr><td> {{ ref.matricule }}</td>
                                  <td>{{ ref.marque }}  {{ ref.modele }}</td>
                                </tr>
                              </table>
                            {% endfor %}
                        </td>
                        <td>
                            <h4 class="text-center"><a href="{{ path('assurance_edit', { 'id': assurance.id }) }}" role="button" class="btn btn-success btn-sm">Edit</a></h4>
                        </td>
                      </tr>
                      {% endfor %}
                    </tbody>
                    </table>
                  </div>
                </div>
              </div>
      </div>

    </div>
  </section>
</div>

</div>
</div>
</div>
</div>
</div>
{% endblock %}
