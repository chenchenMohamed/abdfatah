{% block body %}
<div class="main">
  <div class="main-inner">
    <div class="container">
      <div class="row">
        <div class="span12">

  <div class="content-wrapper">

     <section class="content" style="mapping:25px">
      <div class="row">
        <div class="col-md-12">
              <div class="box box-info">
                <div class="box-header with-border">
                  <h3 class="box-title"><center>Modifier un Assurance</center></h3>
                </div>
    <section class="content-header">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('accueil') }}"><i class="fa fa-dashboard"></i> Tableau de Bord</a></li>
        <li  class="breadcrumb-item"><a href="{{path('assurance_index')}}"><i class="fa fa-car"></i>/ Assurance</a></li>
        <li  class="breadcrumb-item active"><i class="fa fa-car"></i>/ Modifier un Assurance</li>
      </ol>
    </section>
      <div align="right" class="form-group">
          <div class="input-group">
            <h4 class="text-center"><a href="{{ path('assurance_index') }}" role="button" class="btn btn-info btn-sm">Retour à la liste</a></h4>
          </div>
      </div><br>
                <div class="box-body">
    {{ form_start(edit_form) }}
    <div class="span6">
        <div class="row">
           <div class="col-sm-4">{{ form_label(edit_form.numAssurance) }}</div>
           {{ form_errors(edit_form.numAssurance) }}
           <div class="col-sm-8">{{ form_widget(edit_form.numAssurance) }}</div>
        </div>
        <div class="row">
           <div class="col-sm-4">{{ form_label(edit_form.nomAssurance) }}</div>
           {{ form_errors(edit_form.nomAssurance) }}
           <div class="col-sm-8">{{ form_widget(edit_form.nomAssurance) }}</div>
        </div>
        <div class="row">
           <div class="col-sm-4">{{ form_label(edit_form.dateAssurance) }}</div>
           {{ form_errors(edit_form.dateAssurance) }}
           <div class="col-sm-8">{{ form_widget(edit_form.dateAssurance) }}</div>
        </div>
        <div class="row">
           <div class="col-sm-4">{{ form_label(edit_form.dateProchAssurance) }}</div>
           {{ form_errors(edit_form.dateProchAssurance) }}
           <div class="col-sm-8">{{ form_widget(edit_form.dateProchAssurance) }}</div>
        </div>
        <div class="row">
           <div class="col-sm-4">{{ form_label(edit_form.montant) }}</div>
           {{ form_errors(edit_form.montant) }}
           <div class="col-sm-8">{{ form_widget(edit_form.montant) }}</div>
        </div>
    </div>   
    <div class="span6">
           <div>{{ form_label(edit_form.refVoiture,'Séléctionner un ou plusieurs Voiture :') }}
           {{ form_errors(edit_form.refVoiture) }}
           {{ form_widget(edit_form.refVoiture,{'attr': {'class':'chosen-select'}}) }}
        </div>
    </div>     
        <div class="row text-right">
            <input type="submit" class="btn btn-success" value="Modifier" />
        </div>
    {{ form_end(edit_form) }}
                </div>
              </div>
      </div>

    </div>
  </section>
</div>


</div>
</div>
</div>
</div>
</div>
{% endblock %}