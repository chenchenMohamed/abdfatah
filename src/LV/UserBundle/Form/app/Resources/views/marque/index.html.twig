{% block body %}
<div class="main">
  <div class="main-inner">
    <div class="container">
      <div class="row">
        <div class="span12"> 

  <div class="content-wrapper">

     <section class="content" style="mapping:25px">
      <div class="row">
        <div class="col-md-12">
              <div class="box box-info">
                <div class="box-header with-border">
                  <h3 class="box-title"><center>Liste de Marque</center></h3>
                </div>
    <section class="content-header">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('accueil') }}"><i class="fa fa-dashboard"></i> Tableau de Bord</a></li>
        <li  class="breadcrumb-item active"><i class="fa fa-car"></i>/ Marque</li>
      </ol>
    </section>
      <div align="right" class="form-group">
          <div class="input-group">
            <h4 class="text-center"><a href="{{ path('marque_new') }}" role="button" class="btn btn-info btn-sm">Ajouter une Marque</a></h4>
          </div>
      </div><br>
                <div class="box-body">
                  <div class="table-responsive">
                    <table  id="example" class="table table-striped">
                    <thead>
                     <tr>
                         <th class="text-center">Nom de la Marque</th>
                         <th></th>
                     </tr>
                    </thead>
                    <tbody>
                      {% for marque in marques %}
                      <tr>
                        <td>{{ marque.nom }}</td>
                        <td>
                            <h5 class="text-center"><a href="{{ path('marque_edit', { 'id': marque.id }) }}" role="button" class="btn btn-success btn-sm">Edit</a></h5>
                        </td>
                      </tr>
                      {% endfor %}
                    </tbody>
                    </table>
                  </div>
                </div>
              </div>
      </div>

    </div>
  </section>
</div>


</div>
</div>
</div>
</div>
</div>
{% endblock %}
