      </ul>
    </div>
  </div>
</div>
{% endblock %}
{% block body %}
<div class="main">
  <div class="main-inner">
    <div class="container">
      <div class="row">
        <div class="span12">
    <h1>Cheques list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Numcheque</th>
                <th>Banque</th>
                <th>Monatant</th>
                <th>Nomprop</th>
                <th>Datevalidation</th>
                <th>Etat</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for cheque in cheques %}
            <tr>
                <td><a href="{{ path('cheque_show', { 'id': cheque.id }) }}">{{ cheque.id }}</a></td>
                <td>{{ cheque.numCheque }}</td>
                <td>{{ cheque.banque }}</td>
                <td>{{ cheque.monatant }}</td>
                <td>{{ cheque.nomProp }}</td>
                <td>{% if cheque.dateValidation %}{{ cheque.dateValidation|date('Y-m-d') }}{% endif %}</td>
                <td>{{ cheque.etat }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('cheque_edit', { 'id': cheque.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cheque_new') }}">Create a new cheque</a>
        </li>
    </ul>

</div>
</div>
</div>
</div>
</div>
{% endblock %}
