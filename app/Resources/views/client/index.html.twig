{% extends 'template.html.twig' %}
{% block stylesheets %}
<style type="text/css">
    @media (max-width: 600px){
      #title{
        margin-bottom: 20px;
      }
      #button{
        height: 35px;
      }
    }
  </style>
{% endblock %}
{% block body %}
<!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-12 d-flex no-block align-items-center">
                        {#<h4 class="page-title">Liste des voitures pour location</h4>#}
                        <div class="ml-auto text-right col-12">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="{{path('accueil')}}">Accueil</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Liste des clients</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                <h3 class="card-title m-b-0 col-md-6 col-12" id="title">Liste des clients</h3>
                                <div class="col-md-4 col-1"></div>
                                <div class="btn-group col-md-2 col-12" style="float: right;">
                                  <a href="{{ path('client_new') }}" class="btn btn-success" id="button" style="width: 150px;">Ajouter client</a>
                                </div>
                                </div>
                                <br>
                                <div class="col-12 row">
                                  <input type="text" id="cin" placeholder="Rechercher CIN" title="Type in a name" class="col-md-2 col-8 form-control">&nbsp;&nbsp;
                                  <input type="text" id="nom" placeholder="Rechercher nom" title="Type in a name" class="col-md-2 col-8 form-control">&nbsp;&nbsp;
                                  <input type="text" id="prenom" placeholder="Rechercher prénom" title="Type in a name" class="col-md-2 col-8 form-control">&nbsp;&nbsp;
                                  <input type="text" id="numPermis" placeholder="Rechercher numéro permis" title="Type in a name" class="col-md-2 col-8 form-control">&nbsp;&nbsp;
                                </div>
                                <br>
                                <div class="table-responsive">
                                  <table id="zero_config" width="100%" class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                            <th style="display: none;">Id</th>
                                            <th>Numéro CIN ou passeport</th>
                                            <th>Nom</th>
                                            <th>Prénom</th>
                                            <th>Numéro permis</th>
                                            <th>Nationalité</th>
                                            <th>Adresse</th>
                                            <th>Téléphone</th>
                                            {#<th>Dégats</th>#}
                                            <th>Actions</th>
                                          </tr>
                                        </thead>
                                        <tbody>
                                          {% for client in clients %}
                                          <tr>
                                            {% if client.degat == true %}
                                            <td style="display: none;">{{ client.id}}</td>
                                            <td style="color: red;">{{ client.cin }}</td>
                                            <td style="color: red;">{{ client.nom }}</td>
                                            <td style="color: red;">{{ client.prenom }}</td>
                                            <td style="color: red;">{{ client.numPermis }}</td>
                                            <td style="color: red;">{{ client.nationalite }}</td>
                                            <td style="color: red;">{{ client.adresse }}</td>
                                            <td style="color: red;">{{ client.telephone }}</td>
                                            {#<td style="color: red;">{% if client.degat %} oui {% else %} non {% endif %}</td>#}
                                            {% else %}
                                            <td style="display: none;">{{ client.id}}</td>
                                            <td style="color: green;">{{ client.cin }}</td>
                                            <td style="color: green;">{{ client.nom }}</td>
                                            <td style="color: green;">{{ client.prenom }}</td>
                                            <td style="color: green;">{{ client.numPermis }}</td>
                                            <td style="color: green;">{{ client.nationalite }}</td>
                                            <td style="color: green;">{{ client.adresse }}</td>
                                            <td style="color: green;">{{ client.telephone }}</td>
                                            {#<td style="color: green;">{% if client.degat %} oui {% else %} non {% endif %}</td>#}
                                            {% endif %}
                                            <td class="text-center" style='white-space: nowrap'>
                                             
                        
                            {#{{ render(controller('LocationBundle:Client:show',{'id':client.id})) }}#}
                            
                        
                            <a href="{{ path('client_edit', { 'id': client.id }) }}" class="btn btn-warning btn-md"><span class="fas fa-edit" aria-hidden="true"></a>
                        
                        
                            <a href="" class="btn btn-danger btn-md" data-placement="top" title="" data-original-title="Supprimer"  data-toggle="modal" data-target="#deleteModal{{ client.id }}"><span class="fas fa-trash-alt" aria-hidden="true"></span>    </a>
                            <div class="modal fade" id="deleteModal{{ client.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                          <h4 class="modal-title">Confirmation de supression :</h4>
                                          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        </div>
                                        <div class="modal-body" >
                                            <p><span>Voulez-vous vraiment supprimer le client : <a href="#"></a>{{ client.prenom }} {{ client.nom }}? </span></p>

                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                                            <a href="{{ path ('client_delete',{'id': client.id}) }}" class="btn btn-danger"  id="lien" >Supprimer</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        
                  
                                            </td>
                                          </tr>
                                          {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Right sidebar -->
                <!-- ============================================================== -->
                <!-- .right-sidebar -->
                <!-- ============================================================== -->
                <!-- End Right sidebar -->
                <!-- ============================================================== -->
            </div>
            <!-- ============================================================== -->
            <!-- End Container fluid  -->
            <!-- ============================================================== -->
{% endblock %}
{% block javascripts %}
<script>
var table = $('#zero_config').DataTable();
 
$('#cin').on( 'keyup', function () {
    table
        .columns( 1 )
        .search( this.value )
        .draw();
} );
$('#nom').on( 'keyup', function () {
    table
        .columns( 2 )
        .search( this.value )
        .draw();
} );
$('#prenom').on( 'keyup', function () {
    table
        .columns( 3 )
        .search( this.value )
        .draw();
} );
$('#numPermis').on( 'keyup', function () {
    table
        .columns( 4 )
        .search( this.value )
        .draw();
} );
</script>
{% endblock %}