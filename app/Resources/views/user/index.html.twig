{% extends 'template.html.twig' %}
{% block stylesheets %}
<style type="text/css">
    @media (max-width: 600px){
      #title{
        margin-bottom: 20px;
      }
      #button{
        height: 35px;
      }
    }
  </style>
{% endblock %}
{% block body %}
<!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-12 d-flex no-block align-items-center">
                        {#<h4 class="page-title">Liste des utilisateurs</h4>#}
                        <div class="ml-auto text-right col-12">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="{{path('accueil')}}">Accueil</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Liste des utilisateurs</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                <h3 class="card-title m-b-0 col-md-6 col-12" id="title">Liste des utilisateurs</h3>
                                <div class="col-md-4 col-1"></div>
                                {% if is_granted('ROLE_ADMIN') %}
                                <div class="btn-group col-md-2 col-12" style="float: right;">
                                  <a href="{{ path('fos_user_registration_register') }}" class="btn btn-success" id="button" style="width: 150px;">Ajouter utilisateur</a>
                                </div>
                                {% endif %}
                                </div>
                                <br>
                                <div class="table-responsive">
                                  <table id="zero_config" width="100%" class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                            <th style="display: none;">Id</th>
                                            <th>Nom d'utilisateur</th>
                                            <th>Email</th>
                                            <th>RÃ´les</th>
                                            <th>Actions</th>
                                          </tr>
                                        </thead>
                                        <tbody>
                                          {% for user in users %}
                                          <tr>
                                            <td style="display: none;">{{ user.id }}</td>
                                            <td>{{ user.username }}</td>
                                            <td>{{ user.email }}</td>
                                            <td>
                                            {% for role in user.roles %}
                                             {% if role == 'ROLE_ADMIN' %}
                                             Administrateur |
                                             {% else %}
                                             Utilisateur
                                             {% endif %}
                                            {% endfor %}
                                            </td>
                                            <td class="text-center" style='white-space: nowrap'>
                                            {#{% if is_granted('ROLE_ADMIN') %}
                            {{ render(controller('UserBundle:user:show',{'id':user.id})) }}
                            {% elseif app.user.username == user.username %}
                            {{ render(controller('UserBundle:user:show',{'id':user.id})) }}
                            {% endif %}#}
                            {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn-warning"><span class="fa fa-edit" aria-hidden="true"></a>
                            {% elseif app.user.username == user.username %}
                            <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn-warning"><span class="fa fa-edit" aria-hidden="true"></a>
                            {% endif %}
                        
                            {% if is_granted('ROLE_ADMIN') %}
                            {% if app.user.username == user.username %}
                            {% else %} 
                            <a href="" class="btn btn-danger btn-md" data-placement="top" title="" data-original-title="Supprimer"  data-toggle="modal" data-target="#deleteModal{{ user.id }}"><span class="fas fa-trash-alt" aria-hidden="true"></span>    </a>
                            <div class="modal fade" id="deleteModal{{ user.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <br><br><br><br>
                                    <div class="modal-content">
                                        <div class="modal-header">
                                          <h4 class="modal-title">Confirmation de supression :</h4>
                                          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        </div>
                                        <div class="modal-body" >
                                            <p><span>Voulez-vous vraiment supprimer l'utilisateur : <a href="#"></a>  {{ user.username }} ? </span></p>

                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary " data-dismiss="modal">Annuler</button>
                                            <a href="{{ path ('user_delete',{'id': user.id}) }}" class="btn btn-danger">Supprimer</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% endif %}
                            {% endif %}
                        </td>
                                          </tr>
                                          {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Right sidebar -->
                <!-- ============================================================== -->
                <!-- .right-sidebar -->
                <!-- ============================================================== -->
                <!-- End Right sidebar -->
                <!-- ============================================================== -->
            </div>
            <!-- ============================================================== -->
            <!-- End Container fluid  -->
            <!-- ============================================================== -->
{% endblock %}
