{% extends 'template.html.twig' %}
{% block body %}
            <!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-12 d-flex no-block align-items-center">
                        {#<h4 class="page-title">Nouvelle voiture</h4>#}
                        <div class="ml-auto col-12">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="{{path('accueil')}}">Accueil</a></li>
                                    <li class="breadcrumb-item"><a href="{{path('entretien', {'id': 0})}}">Visites et vidanges</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Fiche voiture</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                              <h3 class="card-title m-b-0">Fiche voiture</h3>
                              <br>
                              <div class="row">
                                <div class="col-md-3">
                                <div class="form-group">
                                {{ form_start(form) }}
                                   <label>Matricule {{ form_errors(form.voiture) }}</label>             
                                   {{ form_widget(form.voiture, {'attr': {'class':'select2 form-control custom-select','style':'width: 100%; height:36px;', 'onchange': 'javascript:handleSelect(this)'}}) }}
                                   {{ form_end(form) }}
                                </div>
                                <br>
                                {% if vehicule == null %}{% else %}
                                <div class="form-group">
                                    {% if vehicule.photo != null %}
                                    <img src="{{asset('uploads/images/')}}{{ vehicule.photo }}" width="50px" height="120px" class="form-control">
                                    {% else %}
                                    <img src="{{ asset('assets/images/Pas-dimage-disponible.jpg') }}" width="50px" height="120px" class="form-control">
                                    {% endif %}
                                </div>
                                {% endif %}
                                {{ form_end(form) }}
                                </div>
                               <div class="col-md-3">
                                <div class="form-group">
                                    <label>Marque</label>
                                    <input type="text" id="marque" value=""  class="form-control" readonly>
                                </div>
                                <div class="form-group">
                                    <label>Modèle</label>
                                    <input type="text" id="modele" value=""  class="form-control" readonly>
                                </div>
                                <div class="form-group">
                                    <label>Code couleur</label>
                                    <input type="text" id="couleur" value=""  class="form-control" readonly>
                                </div>
                                <div class="form-group">
                                    <label>Code radio</label>
                                    <input type="text" id="codeRadio" value=""  class="form-control" readonly>
                                </div>
                                
                               </div>
                               <div class="col-md-3">
                                <div class="form-group">
                                    <label>Date de mise en circulation</label>
                                    <input type="text" id="miseEnCirculation" value=""  class="form-control" readonly>
                                </div>
                                <div class="form-group">
                                    <label>Fournisseur</label>
                                    <input type="text" id="fournisseur" value=""  class="form-control" readonly>
                                </div>
                                <div class="form-group">
                                    <label>Date premier payement</label>
                                    <input type="text" id="datePremierPay" value=""  class="form-control" readonly>
                                </div>
                                <div class="form-group">
                                    <label>Date dernier payement</label>
                                    <input type="text" id="dateDernierPay" value=""  class="form-control" readonly>
                                </div>
                               </div>
                               <div class="col-md-3">
                                 <div class="form-group">
                                    <label>Auto financement</label>
                                    <input type="text" id="autoFinancement" value=""  class="form-control" readonly>
                                </div>
                                <div class="form-group">
                                    <label>Montant total à payer</label>
                                    <input type="text" id="montantTotal" value=""  class="form-control" readonly>
                                </div>
                                <div class="form-group">
                                    <label>Montant mensuel</label>
                                    <input type="text" id="montantMensuel" value=""  class="form-control" readonly>
                                </div>
                                <div class="form-group">
                                    <label>Prix/jour</label>
                                    <input type="text" id="prix" value=""  class="form-control" readonly>
                                </div>
                               </div>
                              </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <form class="form-horizontal">
                                <div class="card-body">
                                <div class="row">
                                    <h3 class="card-title m-b-0 col-md-8 col-6" id="title">Visites</h3>
                                    
                                    <div class="btn-group" style="float: right;">
                                    {% if vehicule == null %}{% elseif vehicule.disponibilite == false %}<input type="button" class="btn btn-secondary" value="Voiture supprimée" style="width: 150px;" readonly>{% else %}
                                    <a href="{{ path('visite_new', { 'id': id }) }}" class="btn btn-success" id="button" style="width: 150px;">Ajouter visite</a>
                                    {% endif %}
                                </div>
                                </div>
                                <br>
                                  <div class="table-responsive">
                                  <table id="zero_config" width="100%" class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                            <th style="display: none;">Id</th>
                                            <th>Date début</th>
                                            <th>Date fin</th>
                                            <th>Montant</th>
                                            <th>Actions</th>
                                          </tr>
                                        </thead>
                                        <tbody>
                                          {% for visite in visites %}
                                          <tr>
                                            <td style="display: none;">{{ visite.id}}</td>
                                            <td>{% if visite.dateVisite %}{{ visite.dateVisite|date('d/m/Y') }}{% endif %}</td>
                                            <td>{% if visite.dateProchVisite %}{{ visite.dateProchVisite|date('d/m/Y') }}{% endif %}</td>
                                            <td>{{visite.montant}} TND</td>
                                            <td class="text-center" style='white-space: nowrap'>
                        
                            <a href="{{ path('visite_edit', { 'id': visite.id }) }}" class="btn btn-warning"><span class="fas fa-edit" aria-hidden="true"></span></a>
                        
                        
                            <a href="" class="btn btn-danger" data-placement="top" title="" data-original-title="Supprimer"  data-toggle="modal" data-target="#deleteModal{{ visite.id }}"><span class="fas fa-trash-alt" aria-hidden="true"></span></a>
                            <div class="modal fade" id="deleteModal{{ visite.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                          <h4 class="modal-title">Confirmation de supression :</h4>
                                          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        </div>
                                        <div class="modal-body" >
                                            <p><span>Voulez-vous vraiment supprimer la visite : <a href="#"></a>{{ visite.numVisite }} ? </span></p>

                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                                            <a href="{{ path ('visite_delete',{'id': visite.id}) }}" class="btn btn-danger"  id="lien" >Supprimer</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        
                  
                                            </td>
                                          </tr>
                                          {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <form class="form-horizontal">
                                <div class="card-body">
                                <div class="row">
                                    <h3 class="card-title m-b-0 col-md-8 col-6" id="title">Vidanges</h3>
                                    
                                    <div class="btn-group" style="float: right;">
                                    {% if vehicule == null %}{% elseif vehicule.disponibilite == false %}<input type="button" class="btn btn-secondary" value="Voiture supprimée" style="width: 150px;" readonly>{% else %}
                                    <a href="{{ path('vidange_new', { 'id': id }) }}" class="btn btn-success" id="button" style="width: 150px;">Ajouter vidange</a>
                                    {% endif %}
                                </div>
                                </div>
                                <br>
                                  <div class="table-responsive">
                                  <table id="zero_config2" width="100%" class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                            <th style="display: none;">Id</th>
                                            <th>Date</th>
                                            {#<th>Kilométrage</th>#}
                                            <th>Kilométrage vidange</th>
                                            <th>Montant</th>
                                            <th>Actions</th>
                                          </tr>
                                        </thead>
                                        <tbody>
                                          {% for vidange in vidanges %}
                                          <tr>
                                            <td style="display: none;">{{ vidange.id}}</td>
                                            <td>{% if vidange.dateVidange%}{{ vidange.dateVidange|date('d/m/Y')}}{% endif %}</td>
                                            {#<td>{{vidange.compteur }}</td>#}
                                            <td>{{vidange.prochVidange}}</td>
                                            <td>{{vidange.montant}} TND</td>
                                            <td class="text-center" style='white-space: nowrap'>
                        
                            <a href="{{ path('vidange_edit', { 'id': vidange.id }) }}" class="btn btn-warning"><span class="fas fa-edit" aria-hidden="true"></span></a>
                        
                        
                            <a href="" class="btn btn-danger" data-placement="top" title="" data-original-title="Supprimer"  data-toggle="modal" data-target="#deleteModal{{ vidange.id }}"><span class="fas fa-trash-alt" aria-hidden="true"></span></a>
                            <div class="modal fade" id="deleteModal{{ vidange.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                          <h4 class="modal-title">Confirmation de supression :</h4>
                                          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        </div>
                                        <div class="modal-body" >
                                            <p><span>Voulez-vous vraiment supprimer le vidange: <a href="#"></a>{{ vidange.numVidange }} ? </span></p>

                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                                            <a href="{{ path ('vidange_delete',{'id': vidange.id}) }}" class="btn btn-danger"  id="lien" >Supprimer</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        
                  
                                            </td>
                                          </tr>
                                          {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- editor -->
                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Right sidebar -->
                <!-- ============================================================== -->
                <!-- .right-sidebar -->
                <!-- ============================================================== -->
                <!-- End Right sidebar -->
                <!-- ============================================================== -->
            </div>
            <!-- ============================================================== -->
            <!-- End Container fluid  -->
            <!-- ============================================================== -->

     <table id="voiture" class="table table-striped" style="display:none;background-color:#f1f1f1;padding-top:25px;padding-bottom:25px;padding-left:25px;padding-right:25px; border:1px;border-style: solid;border-color: #B8B8B8;">
                    <thead>
                     <tr>
                         <th class="text-center">Id</th>
                         <th class="text-center">Matricule</th>
                         <th class="text-center">Marque</th>
                         <th class="text-center">Modele</th>
                         <th class="text-center">Couleur</th>
                         <th class="text-center">Code radio</th>
                         <th class="text-center">km</th>
                         <th class="text-center">Fournisseur</th>
                         <th class="text-center">Prix</th>
                         <th class="text-center">miseEncirculation</th>
                         <th class="text-center">nbrePassagers</th>
                         <th class="text-center">capaciteBagages</th>
                         <th class="text-center">Photo</th>
                         <th class="text-center">Agence</th>
                         <th></th>
                     </tr>
                    </thead>
                    <tbody id="myTable">
                      {% for vehicule in voitures %}
                      <tr var="{{ vehicule.matricule }}">
                        <td style="padding-top:30px;">{{ vehicule.id }}</td>
                        <td style="padding-top:30px;">{{ vehicule.matricule }}</td>
                        <td style="padding-top:30px;">{{ vehicule.marque.nom }}</td>
                        <td style="padding-top:30px;">{{ vehicule.modele.nom }}</td>
                        <td style="padding-top:30px;">{{ vehicule.couleur }}</td>
                        <td style="padding-top:30px;">{{ vehicule.codeRadio }}</td>
                        <td style="padding-top:30px;">{{ vehicule.km }}</td>
                        <td style="padding-top:30px;">{{ vehicule.fournisseur }}</td>
                        <td style="padding-top:30px;">{{ vehicule.prix }}</td>
                        <td style="padding-top:30px;">{{ vehicule.miseEnCirculation|date('d/m/Y')}}</td>
                        <td style="padding-top:30px;">{{ vehicule.datePremierPay|date('d/m/Y')}}</td>
                        <td style="padding-top:30px;">{{ vehicule.dateDernierPay|date('d/m/Y')}}</td>
                        <td style="padding-top:30px;">{{ vehicule.autoFinancement}}</td>
                        <td style="padding:0 !important;">{{ vehicule.montantTotal}}</td>
                        <td style="padding:0 !important;">{{ vehicule.montantMensuel}}</td>
                      </tr>
                      {% endfor %}
                    </tbody>
                    </table>

  
{% endblock %}
