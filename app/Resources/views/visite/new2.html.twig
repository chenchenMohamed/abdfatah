{% block body %}
<div class="main">
  <div class="main-inner">
    <div class="container">
      <div class="row">
        <div class="span12">

  <div class="content-wrapper">

     <section class="content" style="mapping:25px">
      <div class="row">
        <div class="col-md-12">
              <div class="box box-info">
                <div class="box-header with-border">
                  <h3 class="box-title">Ajouter une Visite</h3>
                </div>
    <section class="content-header">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('accueil') }}"><i class="fa fa-dashboard"></i> Tableau de Bord</a></li>
        <li  class="breadcrumb-item"><a href="{{ path('visite_index') }}"><i class="fa fa-car"></i>/ Visite</a></li>
        <li  class="breadcrumb-item active"><i class="fa fa-car"></i>/ Ajouter une Visite</li>
      </ol>
    </section>
      <div align="right" class="form-group">
          <div class="input-group">
            <h4 class="text-center"><a href="{{ path('visite_index') }}" role="button" class="btn btn-info btn-sm">Retour Ã  la liste</a></h4>
          </div>
      </div><br>
                <div class="box-body">
    {{ form_start(form) }}
      <div class="span4" >
        <div class="row" style="padding-bottom:25px;">
           <div class="col-sm-4">{{ form_label(form.numVisite) }}</div>
           {{ form_errors(form) }}
           <div class="col-sm-8">{{ form_widget(form.numVisite) }}</div>
        </div>
        <div class="row" style="padding-bottom:25px;">
           <div class="col-sm-4">{{ form_label(form.montant) }}</div>
           {{ form_errors(form) }}
           <div class="col-sm-8">{{ form_widget(form.montant) }}</div>
        </div>
      </div>
      <div class="span4" >
        <div class="row" style="padding-bottom:25px;">
           <div class="col-sm-4">{{ form_label(form.dateVisite) }}</div>
           {{ form_errors(form) }}
           <div class="col-sm-8">{{ form_widget(form.dateVisite) }}</div>
        </div>
        <div class="row" style="padding-bottom:25px;">
           <div class="col-sm-4">{{ form_label(form.dateProchVisite) }}</div>
           {{ form_errors(form) }}
           <div class="col-sm-8">{{ form_widget(form.dateProchVisite) }}</div>
        </div>
      </div>
      <div class="span4" >
        <div class="row" style="padding-bottom:25px;">
           <div class="col-sm-4">{{ form_label(form.refVoiture) }}</div>
           {{ form_errors(form) }}
           <div class="col-sm-8" style="display:none;">{{ form_widget(form.refVoiture,{'attr': {'class':'chosen-select'}}) }}</div>
		   <input type="text" value="{{ voiture }}" readonly>
        </div>
      </div>
        <div class="row text-right">
            <input type="submit" class="btn btn-success" value="Ajouter" />
        </div>
    {{ form_end(form) }}
                </div>
              </div>
      </div>

    </div>
  </section>
</div>


</div>
</div>
</div>
</div>
</div>
{% endblock %}