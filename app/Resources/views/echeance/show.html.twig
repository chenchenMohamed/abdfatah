{% block body %}
    <h1>Echeance</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ echeance.id }}</td>
            </tr>
            <tr>
                <th>Codeecheance</th>
                <td>{{ echeance.codeEcheance }}</td>
            </tr>
            <tr>
                <th>Montantpaye</th>
                <td>{{ echeance.montantPaye }}</td>
            </tr>
            <tr>
                <th>Montantrestant</th>
                <td>{{ echeance.montantRestant }}</td>
            </tr>
            <tr>
                <th>Datepremierpay</th>
                <td>{% if echeance.datePremierPay %}{{ echeance.datePremierPay|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datedernierpay</th>
                <td>{% if echeance.dateDernierPay %}{{ echeance.dateDernierPay|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Nbrepayrestant</th>
                <td>{{ echeance.nbrePayRestant }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ echeance.etat }}</td>
            </tr>
            <tr>
                <th>Contartleasing</th>
                <td>{{ echeance.contartLeasing }}</td>
            </tr>
            <tr>
                <th>Nomleasing</th>
                <td>{{ echeance.nomLeasing }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('echeance_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('echeance_edit', { 'id': echeance.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
