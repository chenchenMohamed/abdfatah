{% extends 'template.html.twig' %}
{% block stylesheets %}
<style type="text/css">
    @media (max-width: 600px){
      #title{
        margin-bottom: 20px;
      }
      #button{
        height: 35px;
      }
    }
  </style>
{% endblock %}
{% block body %}
<!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-12 d-flex no-block align-items-center">
                        {#<h4 class="page-title">Liste des voitures pour location</h4>#}
                        <div class="ml-auto text-right col-12">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="{{path('accueil')}}">Accueil</a></li>
                                    <li class="breadcrumb-item"><a href="{{path('voiture_index')}}">Liste des voitures pour location</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Liste des voitures pour soustraitance</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                <h3 class="card-title m-b-0 col-md-6 col-12" id="title">Liste des voitures pour soustraitance</h3>
                                <div class="col-md-4 col-1"></div>
                                {% if is_granted('ROLE_ADMIN') %}
                                <div class="btn-group col-md-2 col-12" style="float: right;">
                                  <a href="{{ path('voiture_new') }}" class="btn btn-success" id="button" style="width: 150px;">Ajouter voiture</a>
                                </div>
                                {% endif %}
                                </div>
                                <br>
                                <div class="col-12 row">
                                  <input type="text" id="matricule" onkeyup="matricule()" placeholder="Rechercher matricule" title="Type in a name" class="col-md-2 col-8 form-control">&nbsp;&nbsp;
                                  <input type="text" id="marque" onkeyup="marque()" placeholder="Rechercher marque" title="Type in a name" class="col-md-2 col-8 form-control">&nbsp;&nbsp;
                                  <input type="text" id="modele" onkeyup="modele()" placeholder="Rechercher modèle" title="Type in a name" class="col-md-2 col-8 form-control">&nbsp;&nbsp;
                                  <input type="text" id="couleur" onkeyup="couleur()" placeholder="Rechercher couleur" title="Type in a name" class="col-md-2 col-8 form-control">&nbsp;&nbsp;
                                </div>
                                <br>
                                <div class="table-responsive">
                                  <table id="zero_config" width="100%" class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                            <th style="display: none;">Id</th>
                                            <th>Photo</th>
                                            <th>Matricule</th>
                                            <th>Marque</th>
                                            <th>Modèle</th>
                                            <th>Couleur</th>
                                            <th>Type transmission</th>
                                            {#<th>Code Radio</th>
                                            <th>Nombre portes</th>
                                            <th>Nombre passagers</th>
                                            <th>Capacité bagages</th>#}
                                            {#<th>Age</th>#}
                                            <th>Etat</th>
                                            <th>Actions</th>
                                          </tr>
                                        </thead>
                                        <tbody>
                                          {% for voiture in voitures %}
                                          <tr>
                                            <td style="display: none;" width="135px">{{ voiture.id}}</td>
                                            <td style="padding:0 !important;"><img src="{{asset('uploads/images/')}}{{ voiture.photo }}" width="135px" height="66" ></td>
                                            <td>{{ voiture.matricule }}</td>
                                            <td>{{ voiture.marque.nom }}</td>
                                            <td>{{ voiture.modele.nom }}</td>
                                            <td>{{ voiture.couleur }}</td>
                                            <td>{{ voiture.typeTransmission }}</td>
                                            {#<td>{{ voiture.codeRadio }}</td>
                                            <td>{{ voiture.nbrePortes }}</td>
                                            <td>{{ voiture.nbrePassagers }}</td>
                                            <td>{{ voiture.capaciteBagages }}</td>#}
                                            {#<td>{{ voiture.age }}</td>#}
                                            <td>{% if voiture in soustraitances %}
                                              Contrat en cours de payement
                                            {% else %}
                                              Pas de contrat
                                              {% endif %}             
                                            </td>
                                            <td class="text-center" style='white-space: nowrap'>
                            {{ render(controller('LocationBundle:Voiture:show',{'id':voiture.id})) }}
                            <a href="{{ path('voiture_edit', { 'id': voiture.id }) }}" class="btn btn-warning"><span class="fas fa-edit" aria-hidden="true"></span></a>
                              

                            {% if voiture in soustraitances%}
                            {% else %}
                            <a href="" class="btn btn-danger" data-placement="top" title="" data-original-title="Supprimer"  data-toggle="modal" data-target="#deleteModal{{ voiture.id }}"><span class="fas fa-trash-alt" aria-hidden="true"></span></a>
                            <div class="modal fade" id="deleteModal{{ voiture.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                          <h4 class="modal-title">Confirmation de supression</h4>
                                          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        </div>
                                        <div class="modal-body" >
                                            <p><span>Voulez-vous vraiment supprimer la voiture : <a href="#"></a>{{ voiture.matricule }} ? </span></p>

                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                                            <a href="{{ path ('voiture_delete1',{'id': voiture.id}) }}" class="btn btn-danger"  id="lien" >Supprimer</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% endif %}
                        
                  
                                            </td>
                                          </tr>
                                          
                                          {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Right sidebar -->
                <!-- ============================================================== -->
                <!-- .right-sidebar -->
                <!-- ============================================================== -->
                <!-- End Right sidebar -->
                <!-- ============================================================== -->
            </div>
            <!-- ============================================================== -->
            <!-- End Container fluid  -->
            <!-- ============================================================== -->
{% endblock %}
{% block javascripts %}
<script>
  function matricule() {
  var input, filter, table, tr, td, i;
  input = document.getElementById("matricule");
  filter = input.value.toUpperCase();
  table = document.getElementById("zero_config");
  tr = table.getElementsByTagName("tr");
  for (i = 0; i < tr.length; i++) {
    td = tr[i].getElementsByTagName("td")[2];
    if (td) {
      if (td.innerHTML.toUpperCase().indexOf(filter) > -1) {
        tr[i].style.display = "";
      } else {
        tr[i].style.display = "none";
      }
    }       
  }
}

