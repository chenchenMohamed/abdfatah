        </div>
        <div class="row">
           <div class="col-sm-4">{{ form_label(form.dateDebut) }}</div>
           {{ form_errors(form.dateDebut) }}
           <div class="col-sm-8">{{ form_widget(form.dateDebut) }}</div>
        </div>
        <div class="row">
           <div class="col-sm-4">{{ form_label(form.dateFin) }}</div>
           {{ form_errors(form.dateFin) }}
           <div class="col-sm-8">{{ form_widget(form.dateFin,{'attr':{'onblur':'nbjour()'}}) }}</div>
        </div>
        <div class="row">
           <div class="col-sm-4">{{ form_label(form.nbreJour) }}</div>
           {{ form_errors(form.nbreJour) }}
           <div class="col-sm-8">{{ form_widget(form.nbreJour) }}</div>
        </div>
        <div class="row">
           <div class="col-sm-4">{{ form_label(form.refVoiture) }}</div>
           {{ form_errors(form.refVoiture) }}
           <div class="col-sm-8">{{ form_widget(form.refVoiture,{'attr': {'class':'chosen-select'}}) }}</div>
        </div>
        <div class="row">
           <div class="col-sm-4">{{ form_label(form.refClient) }}</div>
           {{ form_errors(form.refClient) }}
           <div class="col-sm-8">{{ form_widget(form.refClient,{'attr': {'class':'chosen-select'}}) }}</div>
        </div>
        <div class="row text-right">
            <input type="submit" value="Create" />
        </div>
    {{ form_end(form) }#}
    </div>
</div>




