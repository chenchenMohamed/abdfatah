        <div class="row">
           <div class="col-sm-4">{{ form_label(form.numReservation) }}</div>
           {{ form_errors(form.numReservation) }}
           <div class="col-sm-8">{{ form_widget(form.numReservation) }}</div>
        </div>
        <div class="row">
           <div class="col-sm-4">{{ form_label(form.dateResevation) }}</div>
           {{ form_errors(form.dateResevation) }}
