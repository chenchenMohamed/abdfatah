{% extends 'template.html.twig' %}
{% block stylesheets %}
<style type="text/css">
    @media (max-width: 600px){
      #title{
        margin-bottom: 20px;
      }
      #button{
        height: 35px;
      }
    }
  </style>
{% endblock %}
{% block body %}
<!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-12 d-flex no-block align-items-center">
                        {#<h4 class="page-title">Liste des voitures pour location</h4>#}
                        <div class="ml-auto text-right col-12">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="{{path('accueil')}}">Accueil</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Liste des réservations</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                <h3 class="card-title m-b-0 col-md-6 col-12" id="title">Liste des réservations</h3>
                                <div class="col-md-4 col-1"></div>
                                <div class="btn-group col-md-2 col-12" style="float: right;">
                                  <a href="{{ path('disponibilite_search') }}" class="btn btn-success" id="button" style="width: 150px;">Ajouter réservation</a>
                                </div>
                                </div>
                                <br>
                                <div class="col-12 row">
                                  <input type="text" id="numReservation" placeholder="Rechercher numéro" title="Type in a name" class="col-md-2 col-8 form-control">&nbsp;&nbsp;
                                  <input type="text" id="matricule" placeholder="Rechercher matricule" title="Type in a name" class="col-md-2 col-8 form-control">&nbsp;&nbsp;
                                  <input type="text" id="nom" placeholder="Rechercher nom" title="Type in a name" class="col-md-2 col-8 form-control">&nbsp;&nbsp;
                                </div>
                                <br>
                                <div class="table-responsive">
                                  <table id="zero_config" width="100%" class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                            <th style="display: none;">Id</th>
                                            <th>Numéro réservation</th>
                                            <th>Voiture</th>
                                            <th>Date début</th>
                                            <th>Date fin</th>
                                            <th>Nom</th>
                                            <th>Actions</th>
                                          </tr>
                                        </thead>
                                        <tbody>
                                        {% for reservation in reservations %}
                                        {% for contrat in contrats if (contrat.refReservation.id is defined and reservation.id == contrat.refReservation.id)%}
                                        {% else %}
                                        <tr>
                                        <td style="display: none;">{{ reservation.id}}</td>
                                        <td>{{ reservation.numReservation }}</td> 
                                        <td>{{ reservation.refVoiture.matricule }}</td> 
                                        <td>{% if reservation.dateDebut %}{{ reservation.dateDebut|date('d/m/Y H:i') }}{% endif %}</td>
                                        <td>{% if reservation.dateFin %}{{ reservation.dateFin|date('d/m/Y H:i') }}{% endif %}</td>
                                        <td>{{ reservation.refClient.prenom }} {{ reservation.refClient.nom }}</td>
                                        <td class="text-center" style='white-space: nowrap'>

                            {#{{ render(controller('LocationBundle:Reservation:show',{'id':reservation.id})) }}#}

                             <a href="{{ path('contrat_new1', { 'id': reservation.id }) }}" role="button" class="btn btn-default">Créer un contrat</a>

                        
                            <a href="" class="btn btn-danger" data-placement="top" title="" data-original-title="Supprimer"  data-toggle="modal" data-target="#deleteModal{{ reservation.id }}"><span class="fas fa-trash-alt" aria-hidden="true"></span></a>
                            <div class="modal fade" id="deleteModal{{ reservation.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                          <h4 class="modal-title">Confirmation de supression :</h4>
                                          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        </div>
                                        <div class="modal-body" >
                                            <p><span>Voulez-vous vraiment supprimer la réservation : <a href="#"></a>{{ reservation.numReservation }} ? </span></p>

                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                                            <a href="{{ path ('reservation_delete',{'id': reservation.id}) }}" class="btn btn-danger"  id="lien" >Supprimer</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        
               
                                            </td>
                                          </tr>
                                          {% endfor %}
                                          {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Right sidebar -->
                <!-- ============================================================== -->
                <!-- .right-sidebar -->
                <!-- ============================================================== -->
                <!-- End Right sidebar -->
                <!-- ============================================================== -->
            </div>
            <!-- ============================================================== -->
            <!-- End Container fluid  -->
            <!-- ============================================================== -->
{% endblock %}
{% block javascripts %}
<script>
  var table = $('#zero_config').DataTable();
 
$('#numReservation').on( 'keyup', function () {
    table
        .columns( 1 )
        .search( this.value )
        .draw();
} );
$('#matricule').on( 'keyup', function () {
    table
        .columns( 2 )
        .search( this.value )
        .draw();
} );
$('#nom').on( 'keyup', function () {
    table
        .columns( 5 )
        .search( this.value )
        .draw();
} );
</script>
</script>
{% endblock %}
