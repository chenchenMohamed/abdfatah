{% extends 'template.html.twig' %}
{% block body %}
            <!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-12 d-flex no-block align-items-center">
                        {#<h4 class="page-title">Nouvelle voiture</h4>#}
                        <div class="ml-auto col-12">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="{{path('accueil')}}">Accueil</a></li>
                                    <li class="breadcrumb-item"><a href="{{path('depenses_index')}}">Liste des dépenses</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Nouvelle dépense</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                          {{ form_start(form) }}
                            <div class="card-body">
                              <h3 class="card-title m-b-0">Nouvelle dépense</h3>
                              <br>
                              <div class="row">
                                <div class="col-md-4">
                                <div class="form-group">
                                    <label>Code dépense {{ form_errors(form.codeDepense) }}</label>
                                    {{ form_widget(form.codeDepense, {'attr': {'class':'form-control', 'readonly':'readonly'}}) }}
                                </div>
                                <div class="form-group">
                                <label>Date {{ form_errors(form.dateDepense) }}</label>
                                <div class="input-group">
                                    {{ form_widget(form.dateDepense, {'attr': {'class':'form-control','placeholder':'jj/mm/aaaa'}}) }}
                                    
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                    </div>
                                </div>
                                </div>
                                <div class="form-group">
                                    <label>Utilisateur {{ form_errors(form.refUtilisateur) }}</label>
                                    {{ form_widget(form.refUtilisateur, {'attr': {'class':'form-control', 'readonly':'readonly', 'value': app.user.username}}) }}
                                </div>
                                <div class="form-group">
                                    <label>Montant {{ form_errors(form.montant) }}</label>
                                    {{ form_widget(form.montant, {'attr': {'class':'form-control'}}) }}
                                  </div>
                                </div>
                                <div class="col-md-4">
                                  <div class="form-group" style="display: none;">
                                    <label>Voiture {{ form_errors(form.refAgence) }}</label>
                                    {{ form_widget(form.refAgence, {'attr': {'class':'form-control select2 custom-select'}}) }}
                                  </div>
                                  <div class="form-group">
                                    <label>Voiture {{ form_errors(form.refVoiture) }}</label>
                                    {{ form_widget(form.refVoiture, {'attr': {'class':'select2 form-control custom-select','style':'width:100%;'}}) }}
                                  </div>
                                  <div class="form-group">
                                    <label> Type{{ form_errors(form.refTypeDepense) }}</label>
                                    {{ form_widget(form.refTypeDepense, {'attr': {'class':'select2 form-control custom-select','style':'width:100%;'}}) }}
                                  </div>
                                  <div class="form-group">
                                    <label>Description {{ form_errors(form.description) }}</label>
                                    {{ form_widget(form.description, {'attr': {'class':'form-control', 'rows': '9'}}) }}
                                  </div>
                                </div>
                              </div>
                            </div>
                            <div class="border-top" >
                                    <div class="card-body" style="float: right;" >
                                        <div class="btn-group">
                                        <a href="{{ path('depenses_index') }}" class="btn btn-secondary"> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Retour&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a>
                                        </div>
                                        <div class="btn-group">
                                        <input type="submit" value="&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Valider&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;" class="btn btn-primary"></div>
                                    </div>
                              </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
                <!-- editor -->
                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Right sidebar -->
                <!-- ============================================================== -->
                <!-- .right-sidebar -->
                <!-- ============================================================== -->
                <!-- End Right sidebar -->
                <!-- ============================================================== -->
            </div>
            <!-- ============================================================== -->
            <!-- End Container fluid  -->
            <!-- ============================================================== -->
{% endblock %}


