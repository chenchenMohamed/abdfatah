{% extends 'template.html.twig' %}
{% block stylesheets %}
<style type="text/css">
    @media (max-width: 600px){
      #title{
        margin-bottom: 20px;
      }
      #button{
        height: 35px;
      }
    }
  </style>
{% endblock %}
{% block body %}
<!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-12 d-flex no-block align-items-center">
                        {#<h4 class="page-title">Liste des voitures pour location</h4>#}
                        <div class="ml-auto text-right col-12">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="{{path('accueil')}}">Accueil</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Liste des dépenses</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">

                                {{ form_start(form, { 'method': 'get' }) }}
                                
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Voiture</label>             
                                            {{ form_widget(form.voiture, {'attr': {'class':'select2 form-control custom-select','style':'width: 100%; height:36px;'}}) }}
                                            
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <input type="submit" value="Chercher" class="btn btn-success" style="height: 37px;margin-top:27px;">
                                        </div>
                                    </div>
                                </div>
                                

                                 
                                    
                                {{ form_end(form) }}

                                <div class="row">
                                <h3 class="card-title m-b-0 col-md-6 col-12" id="title">Liste des dépenses</h3>
                                <div class="col-md-4 col-1"></div>
                                <div class="btn-group col-md-2 col-12" style="float: right;">
                                  <a href="{{ path('depenses_new') }}" class="btn btn-success" id="button" style="width: 150px;">Ajouter dépense</a>
                                </div>
                                </div>
                                <br>
                                <div class="table-responsive">
                                  <table id="zero_config" width="100%" class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                            <th style="display: none;">Id</th>
                                            <th>Code dépense</th>
                                            <th>Date dépense</th>
                                            <th>Montant</th>
                                            <th>Description</th>
                                            <th>Utilisateur</th>
                                            <th>Voiture</th>
                                            <th>Type</th>
                                            <th>Actions</th>
                                          </tr>
                                        </thead>
                                        <tbody>
                                          {% for depense in depenses %}
                                          <tr>
                                            <td style="display: none;">{{ depense.id}}</td>
                                            <td>{{ depense.codeDepense }}</td>
                                            <td>{% if depense.dateDepense %}{{ depense.dateDepense|date('d/m/Y') }}{% endif %}</td>
                                            <td>{{ depense.montant|number_format(3, '.', ',') }} TND</td>
                                            <td>{{ depense.description }}</td>
                                            <td>{{ depense.refUtilisateur }}</td>
                                            <td>{% if depense.refVoiture != null%}{{ depense.refVoiture.matricule }}{% endif %}</td>
                                            <td>{% if depense.refTypeDepense != null%}{{ depense.refTypeDepense.label }}{% endif %}</td>
                                            <td class="text-center" style='white-space: nowrap'>
                        
                                                <a href="{{ path('depenses_edit', { 'id': depense.id }) }}" class="btn btn-warning"><span class="fas fa-edit" aria-hidden="true"></span></a>
                                            
                                                <a href="" class="btn btn-danger" data-placement="top" title="" data-original-title="Supprimer"  data-toggle="modal" data-target="#deleteModal{{ depense.id }}"><span class="fas fa-trash-alt" aria-hidden="true"></span></a>
                                                <div class="modal fade" id="deleteModal{{ depense.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                              <h4 class="modal-title">Confirmation de supression :</h4>
                                                              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                            </div>
                                                            <div class="modal-body" >
                                                                <p><span>Voulez-vous vraiment supprimer la dépense : <a href="#"></a>{{ depense.codeDepense }} ? </span></p>

                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                                                                <a href="{{ path ('depenses_delete',{'id': depense.id}) }}" class="btn btn-danger"  id="lien" >Supprimer</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            
                  
                                            </td>
                                          </tr>
                                          {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Right sidebar -->
                <!-- ============================================================== -->
                <!-- .right-sidebar -->
                <!-- ============================================================== -->
                <!-- End Right sidebar -->
                <!-- ============================================================== -->
            </div>
            <!-- ============================================================== -->
            <!-- End Container fluid  -->
            <!-- ============================================================== -->
{% endblock %}

