{% extends 'template.html.twig' %}
{% block stylesheets %}
<style type="text/css">
    @media (max-width: 600px){
      #title{
        margin-bottom: 20px;
      }
      #button{
        height: 35px;
      }
    }
  </style>
{% endblock %}
{% block body %}
<!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-12 d-flex no-block align-items-center">
                        {#<h4 class="page-title">Liste des voitures pour location</h4>#}
                        <div class="ml-auto text-right col-12">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="{{path('accueil')}}">Accueil</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Liste des assurances</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                <h3 class="card-title m-b-0 col-md-6 col-12" id="title">Liste des assurances</h3>
                                <div class="col-md-4 col-1"></div>
                                <div class="btn-group col-md-2 col-12" style="float: right;">
                                  <a href="{{ path('assurance_new') }}" class="btn btn-success" id="button" style="width: 150px;">Ajouter assurance</a>
                                </div>
                                </div>
                                <br>
                                <div class="table-responsive">
                                  <table id="zero_config" width="100%" class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                            <th style="display: none;">Id</th>
                                            <th>Numéro d'assurance</th>
                                            <th>Nom d'assurance</th>
                                            <th>Date début</th>
                                            <th>date fin</th>
                                            <th>Montant</th>
                                            <th>Voitures</th>
                                            <th>Actions</th>
                                          </tr>
                                        </thead>
                                        <tbody>
                                          {% for assurance in assurances %}
                                          <tr>
                                            <td style="display: none;">{{ assurance.id}}</td>
                                            <td>{{ assurance.numAssurance }}</td>
                                            <td>{{ assurance.nomAssurance }}</td>
                                            <td>{% if assurance.dateAssurance %}{{ assurance.dateAssurance|date('d/m/Y') }}{% endif %}</td>
                                            <td>{% if assurance.dateProchAssurance %}{{ assurance.dateProchAssurance|date('d/m/Y') }}{% endif %}</td>
                                            <td>{{ assurance.montant }}</td>
                                            <td>
                              {#<p style="color:red"><b>Voitures en location :</b></p>
                            {% for ref in assurance.refvoiture if ref.etat == 'Location' or ref.etat == '' %}
                                  -{{ ref.matricule }} {{ ref.marque }}  {{ ref.modele }}<br>
                            {% endfor %}
                              <p style="color:red"><b>Voitures en soustraitance :</b></p>
                            {% for ref in assurance.refvoiture if ref.etat == 'Soustraitance' %}<br>
                                  -{{ ref.matricule }} {{ ref.marque }}  {{ ref.modele }}
                            {% endfor %}#}
                            {% for ref in assurance.refvoiture  %}
                                  -{{ ref.matricule }} {{ ref.marque }}  {{ ref.modele }}<br>
                            {% endfor %}
                                          </td>
                                          <td class="text-center" style='white-space: nowrap'>
                        
                            <a href="{{ path('assurance_edit', { 'id': assurance.id }) }}" class="btn btn-warning"><span class="fas fa-edit" aria-hidden="true"></span></a>
                        
                        
                            <a href="" class="btn btn-danger" data-placement="top" title="" data-original-title="Supprimer"  data-toggle="modal" data-target="#deleteModal{{ assurance.id }}"><span class="fas fa-trash-alt" aria-hidden="true"></span></a>
                            <div class="modal fade" id="deleteModal{{ assurance.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                          <h4 class="modal-title">Confirmation de supression :</h4>
                                          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        </div>
                                        <div class="modal-body" >
                                            <p><span>Voulez-vous vraiment supprimer l'assurance : <a href="#"></a>{{ assurance.numAssurance }} ? </span></p>

                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                                            <a href="{{ path ('assurance_delete',{'id': assurance.id}) }}" class="btn btn-danger"  id="lien" >Supprimer</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        
                  
                                            </td>
                                          </tr>
                                          {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Right sidebar -->
                <!-- ============================================================== -->
                <!-- .right-sidebar -->
                <!-- ============================================================== -->
                <!-- End Right sidebar -->
                <!-- ============================================================== -->
            </div>
            <!-- ============================================================== -->
            <!-- End Container fluid  -->
            <!-- ============================================================== -->
{% endblock %}

